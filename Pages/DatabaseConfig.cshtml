@page
@model ReportVisualizer.Pages.DatabaseConfigPageModel
@{
    ViewData["Title"] = "Database Configuration";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                Database Configuration
            </div>
            <div class="card-body">
                <p>Configure your database connection. You can test the connection before saving.</p>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert success">@Model.Message</div>
                }
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert error">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <div class="row">
                        <div class="col-md-6 col-12 mb-3">
                            <label for="ServerName">Server</label>
                            <input asp-for="Config.ServerName" class="form-control" />
                        </div>
                        <div class="col-md-6 col-12 mb-3">
                            <label for="DatabaseName">Database</label>
                            <input asp-for="Config.DatabaseName" class="form-control" />
                        </div>
                        <div class="col-md-6 col-12 mb-3">
                            <label class="checkbox">
                                <input asp-for="Config.UseIntegratedSecurity" /> Use Integrated Security (Windows Auth)
                            </label>
                        </div>
                        <div class="col-md-6 col-12 mb-3">
                            <label class="checkbox">
                                <input asp-for="Config.TrustServerCertificate" /> Trust Server Certificate
                            </label>
                        </div>
                        <div class="col-md-6 col-12 mb-3">
                            <label for="ConnectionTimeout">Connection Timeout (seconds)</label>
                            <input asp-for="Config.ConnectionTimeout" class="form-control" type="number" min="1" />
                        </div>

                        @if (!Model.Config.UseIntegratedSecurity)
                        {
                            <div class="col-md-6 col-12 mb-3">
                                <label for="Username">Username</label>
                                <input asp-for="Config.Username" class="form-control" />
                            </div>
                            <div class="col-md-6 col-12 mb-3">
                                <label for="Password">Password</label>
                                <input asp-for="Config.Password" class="form-control" type="password" />
                            </div>
                        }
                    </div>

                    <div class="mt-3">
                        <button type="submit" asp-page-handler="Test" class="btn">Test Connection</button>
                        <button type="submit" asp-page-handler="Save" class="btn">Save Configuration</button>
                    </div>
                </form>

                <div class="mt-4">
                    <h5>Generated Connection String</h5>
                    <code>@Model.GeneratedConnectionString</code>
                </div>

            </div>
        </div>
    </div>
</div>